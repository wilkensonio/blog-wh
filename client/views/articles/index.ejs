<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../styles/bootstrap/bootstrap.min.css">

    <link href="./css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="../styles/main.css">

</head>

<body>
    <header class="sticky-top mb-5">
        <%- include('../partials/header') %>
    </header>

    <div class="container">
        <h1 class="text-white pt-4 pb-2 d-flex justify-content-center">
            Explore Our Latest Articles
        </h1>
        <% if (isAdmin || isWriter) { %>
            <div class="pt-5">
                <!-- <h1 class="text-4xl text-center text-white">Blog</h1> -->
                <a class="btn btn-bg-dark" href="/articles/new">New articles</a>
                <a class="btn btn-bg-dark" href="/admin">Dashboard</a>
            </div>
            <% } %>
                <div>
                    <div class="row">
                        <% articles.forEach((article, index)=> { %>
                            <div class="col mb-2">
                                <div class="card mt-4 bg-card" style="width: 100%;">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%= article.title %>
                                        </h4>
                                        <p class="card-subtitle text-muted mb-4">
                                            <%= article.createdAt.toLocaleDateString() %>
                                        </p>
                                        <article class="card-text">
                                            <%= article.description %>
                                        </article>
                                    </div>
                                    <div class="d-flex">
                                        <div class="btn-mr-4 btn-read-more">
                                            <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read
                                                more</a>
                                        </div>
                                        <% if (isAdmin) { %>
                                            <div>
                                                <form action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                            <% } %>

                                    </div>
                                </div>
                            </div>
                            <% if ((index + 1) % 3===0) { %>
                    </div>
                    <div class="row">
                        <% } %>
                            <% })%>
                    </div>
                </div>
    </div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script> -->
    <script src="../styles/bootstrap-js/bootstrap.min.js"></script>
    <script src="/js/scripts.js"></script>
</body>

</html>
