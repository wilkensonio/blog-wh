<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Under Maintenance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .maintenance-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            text-align: center;
            background-color: #222222;
            color: #ffffff;
        }

        .maintenance-code {
            font-size: 6rem;
            font-weight: bold;
            color: #f0ad4e;
            /* Amber color for maintenance */
        }

        .maintenance-message {
            font-size: 1.5rem;
            color: #cccccc;
            margin-top: 20px;
        }

        .countdown {
            font-size: 2rem;
            font-weight: bold;
            color: #f0ad4e;
            margin: 20px 0;
        }

        .btn-home {
            margin-top: 20px;
        }

        .btn-primary {
            color: #fff;
            background-color: #f0ad4e;
            /* Amber color */
            border: #f0ad4e;
        }

        .btn-primary:hover {
            color: #fff;
            background-color: #ec971f;
            /* Darker amber for hover */
            border-color: #ec971f;
        }
    </style>
</head>

<body>
    <div class="maintenance-container">
        <div>
            <div class="maintenance-code">Maintenance</div>
            <div class="maintenance-message">Our site is currently undergoing scheduled maintenance. Weâ€™ll be back
                shortly!</div>
            <div id="countdown" class="countdown">Loading...</div>
            <a href="/" class="btn btn-primary btn-home">Go Back to Home</a>
        </div>
    </div>

    <script>
        const maintenanceHours = 24;
        // Calculate the end time based on current time and maintenance hours
        const now = new Date().getTime();
        const maintenanceEndDate = now + (maintenanceHours * 60 * 60 * 1000);

        // Update the count down every 1 second
        const countdownElement = document.getElementById('countdown');
        const interval = setInterval(function () {
            const now = new Date().getTime();
            const distance = maintenanceEndDate - now;

            // Time calculations
            const hours = Math.floor(distance / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // Display the result
            countdownElement.innerHTML = `${hours}h ${minutes}m ${seconds}s`;

            // If the count down is finished, write some text
            if (distance < 0) {
                clearInterval(interval);
                countdownElement.innerHTML = "We're back!";
            }
        }, 1000);
    </script>
</body>

</html>