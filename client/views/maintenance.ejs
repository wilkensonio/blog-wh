<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Under Maintenance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!DOCTYPE html>
    <html lang="en">
    <style>
        body,
        html {

            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #222222;
        }

        .maintenance-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            color: #ffffff;
        }

        .maintenance-code {
            font-size: 2rem;
            font-weight: bold;
            color: #f0ad4e;
        }

        .maintenance-message {
            font-size: 1.5rem;
            color: #cccccc;
            margin-top: 20px;
        }

        .countdown {
            font-size: 2rem;
            font-weight: bold;
            color: #f0ad4e;
            margin: 20px 0;
        }

        .btn-home {
            margin-top: 20px;
        }

        .btn-primary {
            color: #fff;
            background-color: #f0ad4e;
            border: #f0ad4e;
        }

        .btn-primary:hover {
            color: #fff;
            background-color: #ec971f;
            border-color: #ec971f;
        }

        .icon {
            font-size: 1.5rem;
            color: #ff6600 !important;
        }
    </style>
</head>

<body>
    <div class="maintenance-container">
        <div class="container">
            <div class="maintenance-code">Maintenance</div>
            <div class="maintenance-message">Currently undergoing scheduled maintenance. Weâ€™ll be back
                shortly!</div>
            <div id="countdown" class="countdown">Loading...</div>
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-lg-8 text-center">
                        <div class="box d-flex justify-content-center align-items-center">
                            <a href="https://discord.gg/2Ut2WBuSap" target="_blank" class="me-3"><i
                                    class="fa-brands fa-discord icon"></i></a>

                            <a href="https://www.linkedin.com/in/wilkensonh2/" target="_blank" class="me-3"><i
                                    class="fa-brands fa-linkedin icon"></i></a>

                            <a href="mailto:kadeenopost@gmail.com" target="_blank" class="me-3"><i
                                    class="fa-solid fa-envelope icon"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            const maintenanceHours = 24; // Number of hours for the maintenance period

            // Function to initialize or reset the maintenance end time
            function initializeMaintenanceEnd() {
                const startTime = localStorage.getItem('kadeenoTechMaintenanceStartTime');
                if (!startTime) {
                    // Set the start time to now and calculate the end time
                    const now = new Date().getTime();
                    const endTime = now + (maintenanceHours * 60 * 60 * 1000);
                    localStorage.setItem('kadeenoTechMaintenanceStartTime', now);
                    localStorage.setItem('kadeenoTechMaintenanceEndTime', endTime);
                }
            }

            initializeMaintenanceEnd();

            const maintenanceEndDate = parseInt(localStorage.getItem('kadeenoTechMaintenanceEndTime'));

            // Update the countdown every 1 second
            const countdownElement = document.getElementById('countdown');
            const interval = setInterval(function () {
                const now = new Date().getTime();
                const distance = maintenanceEndDate - now;

                const hours = Math.floor(distance / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                countdownElement.innerHTML = `${hours}h ${minutes}m ${seconds}s`;

                if (distance < 0) {
                    clearInterval(interval);
                    localStorage.removeItem('kadeenoTechMaintenanceStartTime');
                    localStorage.removeItem('kadeenoTechMaintenanceEndTime');
                    window.location.href = '/';
                }
            }, 1000);

            // handle early end of maintenance
            window.addEventListener('load', function () {
                const maintenanceOver = '<%= process.env.MAINTENANCE_OVER %>';

                if (maintenanceOver === 'true') {
                    localStorage.clear();
                    window.location.href = '/';
                }
            });
        </script>
    </div>
</body>

</html>