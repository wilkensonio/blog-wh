<style>
    .text-muted {
        color: #6c757d;
    }
</style>
<div class="d-flex">
    <div class="form-group">
        <label for="category"><span class="text-white">Category</span></label>
        <select class="me-2" name="category" id="category" required>
            <option type="text" class="form-control" disabled selected>
                Choose a category</option>
            <option type=" text" class="form-control" value="articles" <%=article.category==='articles' ?'selected' : ''
                %>>
                Articles</option>
            <option class="form-control" value="algorithm-post" <%=article.category==='algorithm-post' ? 'selected' : ''
                %>
                >Algorithm-post
            </option>
            <option type=" text" class="form-control" value="ai-post" <%=article.category==='ai-post' ?'selected' : ''
                %>>
                AI-post</option>
        </select>
    </div>
    <div class="form-group">

        <label for="type"><span class="text-white">Type</span></label>
        <select name="type" id="type" required>
            <!-- articles -->
            <option type="text" class="form-control" disabled selected>
                Articles</option>
            <option type="text" class="form-control">
                Articles</option>
            <!-- ai -->
            <option type="text" class="form-control" disabled selected>
                Artificial Intelligence</option>
            <!-- start of menu for ai post -->
            <option type=" text" class="form-control" value="linear-regression" <%=article.type==='linear-regression'
                ?'selected' : '' %>>
                Linear Regression
            </option>
            <option type=" text" class="form-control" value="logistic-regression"
                <%=article.type==='logistic-regression' ?'selected' : '' %>>
                Logistic Regression
            </option>
            <option type=" text" class="form-control" value="random-forests" <%=article.type==='random-forests'
                ?'selected' : '' %>>
                random-forests
            </option>

            <hr>

            <!-- start of menu for algorithms post  -->
            <option type="text" class="form-control" disabled selected>
                Algorithm-post</option>
            <option class="form-control" value="two-pointers" <%=article.type==='two-pointers' ? 'selected' : '' %>>
                Two Pointers
            </option>
            <option type=" text" class="form-control" value="fast-slow-pointers" <%=article.type==='fast-slow-pointers'
                ?'selected' : '' %>>
                Fast Slow Pointers
            </option>
            <option type=" text" class="form-control" value="dfs" <%=article.type==='dfs' ?'selected' : '' %>>
                DFS
            </option>
            <option type=" text" class="form-control" value="bfs" <%=article.type==='bfs' ?'selected' : '' %>>
                BFS
            </option>


        </select>
    </div>
</div>

<hr>
<div class=" form-group">
    <label for="title"><span class="text-white">Title</span></label>
    <input type="text" class="form-control" id="title" placeholder="Article's title" name="title"
        value="<%= article.title %>" required>
</div>
<div class="form-group">
    <label for="description"><span class="text-white">Description</span></label>
    <textarea rows="3" type="text" class="form-control" id="description" placeholder="Article's description"
        name="description" required><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown"><span class="text-white">Markdown</span></label>
    <textarea rows="15" type="text" class="form-control" id="markdown" placeholder="Start writing article"
        name="markdown" required><%= article.markdown %></textarea>
</div>
<div class="mt-4 ">
    <a href="/posts" class="btn btn-secondary"> Cancel</a>
    <button class="btn btn-primary ml-4" type="submit">save</button>
    <a href="/admin" class="btn btn-orange ml-4" type="submit">Dashboard</a>
</div>