                    <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
                  </div>
                  <p class="sign-up">Don't have an Account?<a href="/admin/signup"> Sign Up</a></p>
                  <p class="sign-up"><a href="/">User View</a></p>
                </form>
              </div>
            </div>
          </div>
